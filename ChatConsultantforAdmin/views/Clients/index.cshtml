@model ChatConsultantforAdmin.models.CombiModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>        
    <link rel="stylesheet" href="../../bower_components/sculptor/css/sculptor.css">
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="../../bower_components/requirejs/require.js" data-main="../../js/main"></script>    
</head>
<body>
    <div class="page-body">
        <p style="font-size: 18px; font-weight: bold;">Пользователи:</p>
        <table style="width: 100%;" ng-app="chatConsultantForAdmin">
            <tr style="width: 100%;">
                <th style="width: 20%;">
                    @{  
                        foreach (var item in Model.client)
                        {
                            <dialog-preview-directive user-name="@item.name" last-msg-d-t="@item.last_message"></dialog-preview-directive>
                        }
                    }              
                </th>
                <th style="width: 80%;">
                    <div class="chat-window">
                        <div id='chat2' class='chat-with-user'>
                            <ul id='messages' class='clear'>
                                @{
                                    foreach (var item in Model.dialogMessage)
                                    {
                                        if (item.msgText != null)
                                        {
                                            <li class="admin-message-cloud">@item.msgText</li>
                                            <br style="clear: both">
                                            <br style="clear: both">
                                        }
                                    }
                                }
                            </ul>                            
                        </div>   
                        <chat-directive></chat-directive>  
                    </div>               
                </th>
            </tr>        
        </table>
    </div>    
</body>
</html>
