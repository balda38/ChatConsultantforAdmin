@model IEnumerable<ChatConsultantforAdmin.models.Admin>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="../../bower_components/sculptor/css/sculptor.css">
    <link rel="stylesheet" href="../../css/style.css">
</head>
<body>
    <div class="video-background">
        <video width="1600" height="900" autoplay="autoplay" loop="loop" preload="auto">
            <source src="../videos/office_people.mp4" type="video/mp4">
        </video>
    </div>
    <div id="popup" class="hide-popup">
        <div class="popup">
            <div class="popup-content">
                Авторизуйтесь в качестве администратора
                ChatConsultant
                <br><br>
                <input type="text" id="login" placeholder="Логин">
                <br><br>
                <input type="password" id="password" placeholder="Пароль">
                <br><br>
                <button class="enter-button" onClick="userEnter()">Вход</button>
                <a href="~/Admins/Create" class="enter-button">Регистрация</a>
            </div>
        </div>
    </div>    
    <script src="../bower_components/angular/angular.min.js"></script>

    <script type="text/javascript">
        var popup = document.getElementById("popup");

        window.setTimeout(function() {
           popup.setAttribute("class", "hide-popup show-popup");
        }, 500);

        function userEnter() {
            var login = document.getElementById("login").value;
            var password = document.getElementById("password").value;

            var logins = [];
            var passwords = []

            @foreach (var item in Model)
            {
                <text>
                    logins.push("@item.login");
                    passwords.push("@item.password");
                </text>
            }

            if ((logins.indexOf(login) != -1) && (passwords.indexOf(password) != -1)) {
                document.location.href = "../dialogs.html";
            }
            else {
                window.alert("Неверный логин или пароль");
            };        
        };
    </script>
</body>
</html>